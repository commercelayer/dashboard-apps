{
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "pnpm --filter index dev",
    "build": "pnpm --filter \\!index build",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "test": "pnpm -r test",
    "ts:check": "pnpm -r ts:check",
    "test:watch": "pnpm -r test:watch",
    "dep:major": "pnpm dlx npm-check-updates --packageFile '**/package.json' -u",
    "dep:minor": "pnpm dep:major -t minor",
    "prepare": "husky install"
  },
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/commercelayer/app-tags"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "devDependencies": {
    "husky": "^9.0.11",
    "lerna": "^8.1.4",
    "lint-staged": "^15.2.7",
    "npm-check-updates": "^16.14.20"
  },
  "resolutions": {
    "tar": "^6.2.1"
  }
}
